rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is customer
    function isCustomer() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'customer';
    }
    
    // Helper function to check if it's the user's own document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own account, admins can create any
      allow create: if isOwner(userId) || isAdmin();
      
      // Users can update their own data, admins can update any
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete users
      allow delete: if isAdmin();
      
      // User's subcollections (addresses, wishlist, etc.)
      match /{subcollection}/{document} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Orders collection
    match /orders/{orderId} {
      // Customers can read their own orders, admins can read all
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Orders can be created by authenticated users or admins
      allow create: if isAuthenticated();
      
      // Only admins can update orders
      allow update: if isAdmin();
      
      // Only admins can delete orders
      allow delete: if isAdmin();
    }

    // Products collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      
      // Only admins can modify products
      allow write: if isAdmin();
    }

    // Services collection
    match /services/{serviceId} {
      // Anyone can read services
      allow read: if true;
      
      // Only admins can modify services
      allow write: if isAdmin();
    }

    // Support chats collection
    match /support_chats/{chatId} {
      // Users can read their own chats, admins can read all
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid) ||
                     (resource.data.isGuestChat == true);
      
      // Authenticated users and guests can create chats
      allow create: if true;
      
      // Users can update their own chats, admins can update all
      allow update: if isAdmin() || 
                       (isAuthenticated() && resource.data.userId == request.auth.uid) ||
                       (resource.data.isGuestChat == true);
      
      // Only admins can delete chats
      allow delete: if isAdmin();
      
      // Messages subcollection
      match /messages/{messageId} {
        // Users can read messages in their chats, admins can read all
        allow read: if isAdmin() || 
                       (isAuthenticated() && get(/databases/$(database)/documents/support_chats/$(chatId)).data.userId == request.auth.uid) ||
                       (get(/databases/$(database)/documents/support_chats/$(chatId)).data.isGuestChat == true);
        
        // Users can create messages in their chats, admins can create anywhere
        allow create: if isAdmin() || 
                         (isAuthenticated() && get(/databases/$(database)/documents/support_chats/$(chatId)).data.userId == request.auth.uid) ||
                         (get(/databases/$(database)/documents/support_chats/$(chatId)).data.isGuestChat == true);
        
        // Only admins can update/delete messages
        allow update, delete: if isAdmin();
      }
    }

    // Inquiries collection (from contact form)
    match /inquiries/{inquiryId} {
      // Anyone can create inquiries
      allow create: if true;
      
      // Only admins can read/update/delete inquiries
      allow read, update, delete: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Admins can read all notifications, users can read their own
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Only system/admins can create notifications
      allow create: if isAdmin();
      
      // Users can update their own notifications (mark as read), admins can update all
      allow update: if isAdmin() || 
                       (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Only admins can delete notifications
      allow delete: if isAdmin();
    }

    // Cart collection
    match /carts/{userId} {
      // Users can manage their own cart, admins can access all
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Analytics collection (admin only)
    match /analytics/{document} {
      allow read, write: if isAdmin();
    }

    // App settings (admin only)
    match /settings/{document} {
      allow read, write: if isAdmin();
    }

    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}